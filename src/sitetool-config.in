me="sitetool-config"

usage="\
Usage: sitetool-config [--filters-check] [--filters-dir] [--styles-dir] [--version] [--help]"

if test $# -eq 0; then
    echo "${usage}" 1>&2
    exit 1
fi

while test $# -gt 0; do
    case "$1" in
	-*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
	*) optarg= ;;
    esac

    case $1 in
	--help)
	    echo "${usage}" 1>&2
	    exit 0
	    ;;
	--filters-check)
	    if test ! -d @pkgvbindir@/filters ; then
		echo "$me: Missing filters directory"
		exit 1
	    fi
	    for filter in `find @pkgvbindir@/filters/*` ; do
		echo `basename "$filter"`": OK"
	    done
	    exit 0
	    ;;
	--filters-dir)
	    echo @pkgvbindir@/filters
	    exit 0
	    ;;
	--styles-dir)
	    echo @pkgvdatadir@/styles
	    exit 0
	    ;;
	--version)
	    echo @PACKAGE_VERSION@
	    exit 0
	    ;;
	*)
	    echo "${usage}" 1>&2
	    exit 1
	    ;;
    esac
    shift
done

exit 0;
