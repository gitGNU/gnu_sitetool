GUILE_FLAGS="--debug"

$GUILE $GUILE_FLAGS -l $4 -c '
(map->sxml (open-input-file "'$1'") (open-output-file "'$2'"))
(exit 0)
' || {
	rm -f $2 ;
	exit 1 ;
}

exit 0
