use strict;
use warnings;

my $program = "perl-autofrisk";

if ($#ARGV < 0) {
    print STDERR "$program: Missing parameters\n";
    exit 1;
}
#if ($#ARGV > 1) {
#    print STDERR "$program: too many parameters\n";
#    exit 1;
#}

my @filenames;
my %modules;

@filenames = @ARGV;
%modules   = ();

for my $filename (@filenames) {
    my $filehandle;

    if (!open($filehandle, "<", $filename)) {
	print STDERR "Unable to open \`$filename' for reading ($!)\n";
	exit 1;
    }

    while (<$filehandle>) {
	if ($_ =~ /^use[ \t]*(.*);$/) {
	    # Skip our modules
	    if ($1 =~ /^Sitetool::.*$/) {
		next;
	    }
	    $modules{$1} = 1;
	}
    }
    
    close($filehandle);
}

for my $key (keys(%modules)) {
    print "AX_PROG_PERL_MODULE([$key])\n";
}

exit 0;
