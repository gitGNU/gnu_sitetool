use strict;
use warnings;

my $program = "whitespace-detect";

if ($#ARGV < 0) {
    print STDERR "$program: Missing parameters\n";
    exit 1;
}

my $found = 0;
for my $i (0 .. $#ARGV) {
    my $filename;
    my $filehandle;

    $filename = $ARGV[$i];
    
    if (!open($filehandle, "<", $filename)) {
	print STDERR "$program: Cannot open \`" . $filename . "' for input\n";
	exit 1;
    }

    while (<$filehandle>) {
	if ($_ =~ /[ \t]+$/) {
	    $found = 1;
	    print STDERR
		"$program: File \`" . $filename . "' " .
		"contains extra whites\n";

	    last;
	}
    }

    close($filehandle);
}

#exit $found;
exit 0;
