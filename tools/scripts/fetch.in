me="fetch"
WGET=@WGET@

URL=$1
FILE=$2

if test "$WGET" = "" ; then
    echo "$me: Missing wget executable ..."
    exit 1
fi
if test "$URL" = "" ; then
    echo "$me: Missing input URL"
    exit 1
fi
if test "$FILE" = "" ; then
    echo "$me: Missing output file"
    exit 1
fi

echo "$me: Fetching $URL"
rm -f $FILE
$WGET --no-verbose -q -O $FILE -- $URL || {
    echo "$me: Cannot fetch $URL"
    rm -f $FILE
    exit 1
}

if test ! -s $FILE ; then
    echo "$me: Cannot fetch $URL"
    rm -f $FILE
    exit 1
fi

exit 0
