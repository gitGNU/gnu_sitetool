package Sitetool::Autoconfig;

use warnings;
use strict;
use diagnostics;

use Exporter;
use File::Spec;

use vars qw (@ISA @EXPORT);

@ISA    = qw (Exporter);
@EXPORT = qw (
	      $PACKAGE_NAME
	      $PACKAGE_VERSION
	      $PACKAGE_BUGREPORT

	      $WGET
	      $WPUT
	      $TIDY
	      $GUILE
	      $FCP

	      $bin_dir
	      $libs_dir
	      $data_dir
	     );

use vars qw  (
	      $PACKAGE_NAME
	      $PACKAGE_VERSION
	      $PACKAGE_BUGREPORT

	      $WGET
	      $WPUT
	      $TIDY
	      $GUILE
	      $FCP

	      $bin_dir
	      $libs_dir
	      $data_dir
	     );

$PACKAGE_NAME      = '@PACKAGE_NAME@';
$PACKAGE_BUGREPORT = '@PACKAGE_BUGREPORT@';
$PACKAGE_VERSION   = '@PACKAGE_VERSION@';

$WGET              = '@WGET@';
$WPUT              = '@WPUT@';
$TIDY              = '@TIDY@';
$GUILE             = '@GUILE@';
$FCP               = '@FCP@';

$bin_dir           = $ENV{SITETOOL_BINARY_PATH}  || "@pkgvbindir@";
$libs_dir          = $ENV{SITETOOL_LIBRARY_PATH} || "@pkgvlibsdir@";
$data_dir          = $ENV{SITETOOL_DATA_PATH}    || "@pkgvdatadir@";

1;
